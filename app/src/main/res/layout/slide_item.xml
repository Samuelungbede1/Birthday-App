<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="35dp"
    app:cardElevation="15dp"
    card_view:cardCornerRAdius="12dp">


    <ImageView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_background"
        android:contentDescription="@string/imageSlider"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stylescript_regular"
        android:text="yaay!!"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50sp"
        android:translationX="100dp"
        android:translationY="60dp" />

    <ImageView
        android:id="@+id/flower"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:fontFamily="@font/stylescript_regular"
        android:gravity="center"
        android:src="@drawable/flower"
        android:text="yaay!!"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:translationX="170dp"
        android:translationY="60dp" />

    <TextView
        android:id="@+id/who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="someone"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="60dp"
        android:translationY="130dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/notification_bell"
        android:translationX="180dp"
        android:translationY="160dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/notification_bell"
        android:translationX="40dp"
        android:translationY="160dp"
        app:cardBackgroundColor="#FFFF"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:translationX="110dp"
        android:translationY="160dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>
